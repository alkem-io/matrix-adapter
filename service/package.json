{
  "name": "alkemio-matrix-adapter",
  "version": "0.5.1",
  "description": "Alkemio Matrix Adapter service",
  "author": "Alkemio Foundation",
  "private": false,
  "license": "EUPL-1.2",
  "type": "module",
  "engines": {
    "node": ">=22.x",
    "pnpm": ">=9.x"
  },
  "packageManager": "pnpm@9.14.2",
  "main": "dist/main.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alkem-io/matrix-adapter.git"
  },
  "scripts": {
    "build": "node --run build:clean && nest build --path tsconfig.prod.json",
    "start": "node dist/main.js",
    "dev": "nest start --watch --debug=0.0.0.0:9229",
    "testNew": "rimraf coverage .nyc_output && concurrently 'node --run test:unit' 'node --run test:e2e' && node --run calculate-global-test-coverage",
    "test": "jest --config=./test/config/jest.config.js",
    "test:unit": "vitest run --coverage --config vitest.config.unit.ts",
    "test:e2e": "vitest run --coverage --config ./vitest.config.e2e.ts",
    "test:performance": "k6 run tests/performance/contexts/users/get-users.mjs",
    "calculate-global-test-coverage": "tsx scripts/calculate-global-test-coverage.ts",
    "prepare": "[ -f .husky/install.mjs ] && node .husky/install.mjs || true",
    "lint": "eslint --ignore-path .gitignore . --ext .js,.mjs,cjs,.ts,.mts",
    "lint:fix": "eslint --ignore-path .gitignore . --ext .js,.mjs,cjs,.ts,.mts --fix",
    "lint:file": "eslint --ignore-path .gitignore",
    "lint:yaml": "chmod +x scripts/lint_yaml.sh && ./scripts/lint_yaml.sh",
    "build:clean": "rimraf dist; exit 0",
    "typos": "chmod +x scripts/check_typos.sh && ./scripts/check_typos.sh",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "start:services": "docker-compose -f quickstart-mailslurper.yml up --build --force-recreate",
    "lint:prod": "tsc --noEmit && cross-env NODE_ENV=production eslint src/**/*.ts{,x}",
    "test:dev": "jest --config=./test/config/jest.config.js --no-cache --coverage=true --detectOpenHandles --runInBand --logHeapUsage",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:ci:coverage": "jest --runInBand --config ./test/config/jest.config.ci.js && cat ./coverage-ci/lcov.info | coveralls",
    "test:ci": "jest --runInBand --config ./test/config/jest.config.ci.js"
  },
  "dependencies": {
    "@alkemio/matrix-adapter-lib": "^0.4.1",
    "@nestjs/axios": "^4.0.0",
    "@nestjs/cli": "^11.0.7",
    "@nestjs/common": "^11.1.3",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.3",
    "@nestjs/microservices": "^11.1.3",
    "@nestjs/platform-express": "^11.1.3",
    "amqp-connection-manager": "^3.7.0",
    "amqplib": "^0.8.0",
    "cross-env": "^7.0.3",
    "crypto-js": "^4.1.1",
    "dotenv": "^16.5.0",
    "matrix-js-sdk": "^37.9.0",
    "module-alias": "^2.2.3",
    "nest-winston": "^1.10.2",
    "rxjs": "^7.8.2",
    "winston": "^3.13.1",
    "winston-elasticsearch": "^0.19.0",
    "yaml": "^2.4.5"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@commitlint/types": "^19.5.0",
    "@nestjs/schematics": "^11.0.5",
    "@nestjs/testing": "^11.1.3",
    "@swc/cli": "^0.7.7",
    "@swc/core": "^1.7.42",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^22.8.7",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^8.34.1",
    "@typescript-eslint/parser": "^8.34.1",
    "@vitest/coverage-istanbul": "3.2.4",
    "concurrently": "^9.0.1",
    "eslint": "^9.26.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.4.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-unicorn": "^59.0.1",
    "eslint-plugin-vitest": "^0.5.4",
    "fs-extra": "^11.2.0",
    "husky": "^9.1.6",
    "jest": "^29.7.0",
    "lint-staged": "^16.1.2",
    "nock": "^13.5.5",
    "nyc": "^17.1.0",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.19.2",
    "typescript": "^5.8.3",
    "unplugin-swc": "^1.5.1",
    "vite": "^5.4.10",
    "vitest": "^1.3.1",
    "vitest-mock-extended": "^1.3.1"
  }
}
